{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "privateDnsZoneName": {
      "type":"string"
    },
    "storageNicId": {
      "type":"string",
      "metadata":{
        "description": "resource id to ipConfigurations array of private endpoint nic"
      }
    },
    "dnsEntriesTemplateUri": {
      "type":"string",
      "metadata":{
        "description": "Uri for template that creates private dns entries"
      }
    }
  },
  "variables": {
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2020-01-01",
      "name": "[concat('PrivateDnsFQDN', copyIndex(1))]",
      "properties": {
        "mode": "Incremental",
        "parameters":{
          "privateDnsZoneName": {"value": "[parameters('privateDnsZoneName')]"},
          "storageNicIpConf": {"value": "[reference(parameters('storageNicId'), '2019-11-01').properties.ipConfigurations[copyIndex()]]"}
        },
        "templateLink":{
          "uri": "[parameters('dnsEntriesTemplateUri')]"
        }
      },
      "copy": {
        "name": "ipconfigCopy",
        "count": "[length(reference(parameters('storageNicId'), '2019-11-01').properties.ipConfigurations)]",
        "mode": "parallel"
      }
    }
  ],
  "outputs": {
  },
  "functions": [
  ]
}